# Coverage.py 配置文件

[run]
# 源代码目录
source = src

# 要覆盖的包
omit =
    */__init__.py
    */__pycache__/*
    */tests/*
    */test_*.py
    .venv/*
    */wsgi.py

[report]
# 覆盖率精度
precision = 2

# 排除不需要覆盖的行
exclude_lines =
    # 标准的排除项
    pragma: no cover
    def __repr__
    def __str__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstract

    # 可选的排除项
    class .*\(.*\):
    @[a-z_]+\.setter

# 显示缺失的行号
show_missing = True

# 跳过空文件
skip_empty = True

[html]
# HTML 报告输出目录
directory = htmlcov

[xml]
# XML 报告输出路径（用于 CI/CD）
output = coverage.xml
